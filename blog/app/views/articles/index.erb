<h1>Listing articles</h1>
<p>

</p>
<table>
  <tr>
    <td>
      <p>
        <%= link_to '<<Back', controller: 'welcome' %>
      </p>
    </td>
    <td>
      <p>
        <%= link_to '+ New article', new_article_path %>
      </p>
    </td>
  </tr>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>


  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: "back_link"  %></td>
      <td><%= link_to 'Edit', edit_article_path(article), data: {confirm: 'Are you sure?'}, class: "back_link"  %></td>
      <td><%= link_to 'Destroy', article_path(article),
                      method: :delete,
                      data: {confirm: 'Are you sure?'}, class: "back_link"  %></td>
    </tr>
  <% end %>
</table>

